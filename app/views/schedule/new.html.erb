<div class ="contents">
  <div class ="container">
    <%= form_with model: @schedule, url: schedule_index_path do |form| %>
      <% if flash[:notice] %>
        <p><%= flash[:notice] %></p>
      <% end %>
      <table class = "form">
        <h2>スケジュール新規作成</h2>
        <tbody>
          <tr>
            <th>
              <label for="post_title">タイトル</label>
            </th>
            <td>
              <%= form.text_field :title %>
            </td>
          </tr>
          <tr>
            <th>
              <label for="start">開始日時</label>
            </th>
            <td>
              <%= form.datetime_local_field :start %>
            </td>
          </tr>
          <tr>
            <th>
              <label for="end">終了日時</label>
            </th>
            <td>
              <%= form.datetime_local_field :end %>
            </td>
          </tr>
          <tr>
            <th>
              <label for="end">終日</label>
            </th>
            <td>
              <%= form.check_box :allday %>
            </td>
          </tr>

        <!--form.text_area :message, size: "70x5"-->
        </tbody>
      </table>
      <%= form.submit "スケジュール登録"%>
      <%= link_to "トップページ", root_path %>
    <% end %>
  </div>
</div>